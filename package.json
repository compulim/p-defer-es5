{
  "name": "p-defer-es5",
  "version": "2.0.1",
  "description": "",
  "engines": {
    "node": ">= 12.2.0"
  },
  "files": [
    "babel.config.commonjs.json",
    "babel.config.esm.json",
    "dist/**/*",
    "scripts/**/*",
    "src/**/*"
  ],
  "main": "lib/index.js",
  "module": "lib/esm/index.mjs",
  "exports": {
    ".": {
      "import": "./lib/esm/index.mjs",
      "require": "./lib/index.js"
    },
    "./dist/p-defer-es5.production.min.js": {
      "default": "./dist/p-defer-es5.production.min.js"
    }
  },
  "scripts": {
    "postinstall:commonjs": "node ./scripts/esbuild.mjs p-defer ./src/index.js cjs ./lib/index.bundled.js && babel ./lib/index.bundled.js --config-file ./babel.config.commonjs.json --out-file ./lib/index.js",
    "postinstall:esm": "node ./scripts/esbuild.mjs p-defer ./src/index.mjs esm lib/esm/index.bundled.mjs && babel ./lib/esm/index.bundled.mjs --config-file ./babel.config.esm.json --out-file ./lib/esm/index.mjs",
    "postinstall": "npm run postinstall:commonjs && npm run postinstall:esm",
    "prepublishOnly:global": "mkdirp ./dist && esbuild ./src/global.mjs --bundle --format=iife --minify --outfile=./lib/esm/global.bundled.mjs && babel ./lib/esm/global.bundled.mjs --config-file ./babel.config.global.json | terser --compress --mangle --output ./dist/p-defer-es5.production.min.js",
    "prepublishOnly": "npm run prepublishOnly:global",
    "update": "npm install $(cat package.json | jq -r '.dependencies + .devDependencies | keys | .[]' | awk '{print $1 \"@latest\"}')"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/compulim/p-defer-es5.git"
  },
  "keywords": [
    "defer",
    "deferred",
    "p-defer",
    "promise"
  ],
  "author": "William Wong <compulim@hotmail.com> (http://compulim.info/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/compulim/p-defer-es5/issues"
  },
  "homepage": "https://github.com/compulim/p-defer-es5#readme",
  "dependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/runtime-corejs3": "^7.17.2",
    "esbuild": "^0.14.23",
    "mkdirp": "^1.0.4",
    "read-pkg-up": "^9.1.0"
  },
  "devDependencies": {
    "p-defer": "^4.0.0",
    "terser": "^5.11.0"
  },
  "peerDependencies": {
    "p-defer": ">= 4.0.0"
  }
}
