{
  "name": "p-defer-es5",
  "version": "2.0.0-0",
  "description": "",
  "engines": {
    "node": ">= 12.2.0"
  },
  "files": [
    "babel.config.commonjs.json",
    "babel.config.esm.json",
    "dist/**/*",
    "scripts/**/*",
    "src/**/*"
  ],
  "main": "lib/index.js",
  "module": "lib/esm/index.mjs",
  "scripts": {
    "postinstall:commonjs:bundle": "node ./scripts/esbuild.mjs p-defer ./src/index.js cjs ./lib/index.bundled.js",
    "postinstall:commonjs:transpile": "babel ./lib/index.bundled.js --config-file ./babel.config.commonjs.json --out-file ./lib/index.js",
    "postinstall:commonjs": "npm run postinstall:commonjs:bundle && npm run postinstall:commonjs:transpile",
    "postinstall:esm:bundle": "node ./scripts/esbuild.mjs p-defer ./src/index.mjs esm lib/esm/index.bundled.mjs",
    "postinstall:esm:transpile": "babel ./lib/esm/index.bundled.mjs --config-file ./babel.config.esm.json --out-file ./lib/esm/index.mjs",
    "postinstall:esm": "npm run postinstall:esm:bundle && npm run postinstall:esm:transpile",
    "postinstall": "npm run postinstall:commonjs && npm run postinstall:esm",
    "prepublishOnly:global:bundle": "esbuild ./src/global.mjs --bundle --format=iife --minify --outfile=./lib/esm/global.bundled.mjs",
    "prepublishOnly:global:transpile": "babel ./lib/esm/global.bundled.mjs --config-file ./babel.config.global.json | terser --compress --mangle --output ./dist/p-defer-es5.production.min.js",
    "prepublishOnly:global": "mkdirp ./dist && npm run prepublishOnly:global:bundle && npm run prepublishOnly:global:transpile",
    "prepublishOnly": "npm run prepublishOnly:global",
    "pretest": "npm run prepublishOnly",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/compulim/p-defer-es5.git"
  },
  "keywords": [
    "defer",
    "deferred",
    "p-defer",
    "promise"
  ],
  "author": "William Wong <compulim@hotmail.com> (http://compulim.info/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/compulim/p-defer-es5/issues"
  },
  "homepage": "https://github.com/compulim/p-defer-es5#readme",
  "dependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@babel/runtime-corejs3": "^7.14.7",
    "esbuild": "^0.12.15",
    "mkdirp": "^1.0.4",
    "read-pkg-up": "^8.0.0",
    "terser": "^5.7.1"
  },
  "devDependencies": {
    "p-defer": "^4.0.0"
  },
  "peerDependencies": {
    "p-defer": ">= 4.0.0"
  }
}
