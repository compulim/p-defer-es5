{
  "name": "p-defer-es5",
  "version": "2.0.0-0",
  "description": "",
  "files": [
    "babel.config.cjs.json",
    "babel.config.esm.json",
    "dist/**/*",
    "src/**/*"
  ],
  "main": "lib/index.js",
  "module": "lib/esm/index.mjs",
  "scripts": {
    "build:cjs": "esbuild ./src/index.js --bundle --format=cjs | babel --config-file ./babel.config.cjs.json --filename index.js --out-file lib/index.js",
    "build:esm": "esbuild ./src/index.js --bundle --format=esm | babel --config-file ./babel.config.esm.json --filename index.mjs --out-file lib/esm/index.mjs",
    "build:umd": "mkdir dist && esbuild ./src/polyfill.js --bundle --format=iife | babel --config-file ./babel.config.esm.json --filename polyfill.js | terser --compress --mangle --output dist/p-defer-es5.production.min.js",
    "postinstall": "npm run build:cjs && npm run build:esm",
    "prepublishOnly": "npm run build:umd",
    "pretest": "npm run prepublishOnly",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/compulim/p-defer-es5.git"
  },
  "keywords": [
    "defer",
    "p-defer",
    "promise"
  ],
  "author": "William Wong <compulim@hotmail.com> (http://compulim.info/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/compulim/p-defer-es5/issues"
  },
  "homepage": "https://github.com/compulim/p-defer-es5#readme",
  "dependencies": {
    "@babel/cli": "7.14.5",
    "@babel/core": "7.14.6",
    "@babel/preset-env": "7.14.7",
    "esbuild": "0.12.15",
    "terser": "5.7.1"
  },
  "devDependencies": {
    "jest": "^27.0.6",
    "p-defer": "^4.0.0"
  },
  "peerDependencies": {
    "p-defer": "*"
  }
}
